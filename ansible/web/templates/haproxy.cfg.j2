global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 777 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend http_back

backend http_back
    balance roundrobin
{% for i in range(1, 3) %}
    server web-{{ "%02d"|format(i) }} 192.168.111.{{ 10 + i }}:80 check
{% endfor %}

backend WAS_back
    balance roundrobin
{% for i in range(1, 3) %}
    server WAS-{{ "%02d"|format(i) }} 192.168.111.{{ 20 + i }}:3000 check
{% endfor %}
